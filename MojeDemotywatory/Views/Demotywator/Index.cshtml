@model MojeDemotywatory.Models.Demotywatory

@{
    ViewBag.Title = "Index";
}
<div class="srodek">
   
@foreach (var d in @Model.ListaDemotow)
   {
    if (d.CzySaSlajdy)
    {
        foreach (var s in d.ListaSlajdow)
        {
            <table>
                <tr>
                   
                   <td><img src="@s.AdresObrazka"/></td> 
                   <td class="td2">@s.Opis</td> 

                </tr>
                <tr>
                       <td>
                          <a class="btn btn-primary"  href="@Url.Action("Dodaj", "Fajne", new { adres = @s.AdresObrazka })">Fajny</a> 
                        </td>
                </tr>
            </table>
        }      
    }
    else
    {
        
        <table>
            <tr>
               
                <td>
                     <a href="@d.AdresStrony"> 
                    <img src="@d.AdresObrazka"/>
                         </a>
                         </td>
                
            </tr>
             <tr>
                  <td>
                   <a class="btn btn-primary" href="@Url.Action("Dodaj", "Fajne", new { adres = @d.AdresObrazka})">Fajny</a> 
                  </td>
                </tr>
        </table>
         
         
          
    <br />
    }
   }
</div>